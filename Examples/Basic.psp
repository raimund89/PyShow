# Define a slide layout
beginTemplate('TitlePage')
{
	setBackgroundColor('#500')
	addTextBlock('Title', text='Example Title', x=1920, y=1080, fontname='Times New Roman', fontsize=100, decoration='biu', alignment='left', color='#FFF')
}

# The slideshow begins here
beginShow()
{
	newSlide('TitlePage')
	setText('Title', 'Introduction')
	pause() # waiting for key
	setText('Title', 'Contents')
	pause()
}