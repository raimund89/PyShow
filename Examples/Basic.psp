# Define a slide layout
beginTemplate('TitlePage')
{
	setBackground('#FF0')
	addTextBlock('Title', 'Example Title', fontname='Courier New', fontsize=24, decoration='biu', alignment='left')
}

# The slideshow begins here
beginShow()
{
	newSlide('TitlePage')
	setText('Title', 'Introduction')
	pause() # waiting for key
	setText('Title', 'Contents')
	pause()
}