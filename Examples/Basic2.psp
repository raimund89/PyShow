# A new slide template
beginTemplate('TitlePage')
{
	addTextBlock('left')
}

# This function describes the show
beginShow()
{
	newSlide('TitlePage') # In-line
	setText('Title', 'Introduction')
	pause()
	# Text between lines
	#
	# And skipping a line
	setText('Title', 'Contents')
	pause() # Also inline
}